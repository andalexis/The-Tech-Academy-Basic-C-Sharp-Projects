
@using MVC_Drill.ViewModels
@model List<ClientInfoVM>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-8 mx-auto shadow">
        <div class="card card-header text-center">
            <h5 class="m-0">Client Info</h5>
        </div>
        <div class="card-body">
            @foreach (var clientinfo in Model)
            {
                using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@clientinfo.Id" />
                    <div class="row">
                        <div class="col">
                            <label style="float:left">First Name</label>
                        </div>
                        <div class="col">
                            <label style="float:left">Last Name</label>
                        </div>
                        <div class="col">
                            <label style="float:left">Email Address</label>
                        </div>
                        <div class="col">
                            <label style="float:left">Quote Total</label>
                        </div>
                        <div class="col">
                            <label style="float:left">Remove</label>
                        </div>
                    </div>
                    <div class="row mb-3">

                        <div class="col">
                            
                            @clientinfo.FirstName
                        </div>
                        <div class="col">
                            @clientinfo.LastName
                        </div>
                        <div class="col">
                            @clientinfo.EmailAddress
                        </div>
                        <div class="col">
                            @clientinfo.QuoteTotal
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-danger btn-block">
                                Delete
                            </button>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
</div>
